<% if (title) { %>
<h1 class="header"><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<div class="account">
  <form action="/account/register" method="post" class="account__form">

    <div>
      <label class="account__label" for="account_firstname">First name: *</label>
      <input type="text" class="account__input" name="account_firstname" id="account_firstname" required>
    </div>
    
    <div>
      <label class="account__label" for="account_lastname">Last name: *</label>
      <input type="text" class="account__input" name="account_lastname" id="account_lastname" required>
    </div>

    <div>
      <label class="account__label" for="account_email">Email address: *</label>
      <input type="email" class="account__input" name="account_email" id="account_email" required>
    </div>

    <div>
      <label class="account__label" for="account_password">Password: *</label>
      <span>Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character</span>
      <input
        type="password"
        class="account__input"
        name="account_password"
        id="account_password"
        pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"
        required
      >
    </div>

    <button type="submit" class="account__submit">Register</button>
    
  </form>
</div>

<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>