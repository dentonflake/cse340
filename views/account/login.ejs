<% if (title) { %>
<h1 class="header"><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<%- messages() %>

<div class="account">
  <form action="" class="account__form">

    <div>
      <label for="account_email" class="account__label">Email:</label>
      <input type="email" name="account_email" id="account_email" class="account__input" required>
    </div>
    
    <div>
      <label class="account__label" for="account_password">Password: *</label>
      <span>Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character</span>
      <input
        type="password"
        class="account__input"
        name="account_password"
        id="account_password"
        pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"
        required
      >
    </div>

    <button type="submit" class="account__submit">LOGIN</button>
  </form>
  <p class="account__create-account">No account? <a href="/account/register">Sign-up</a></p>
</div>