<% if (title) { %>
  <h1 class="header">
    <%= title %>
  </h1>
  <% } else { res.redirect('/') } %>

    <% if (errors) { %>
      <ul class="notice">
        <% errors.array().forEach(error=> { %>
          <li>
            <%= error.msg %>
          </li>
          <% }) %>
      </ul>
      <% } %>

        <div class="inv-form-container">

          <p class="inv-form-container__required">All FIELDS ARE REQUIRED.</p>
          <form action="/inv/add-inventory" method="post" class="inv-form-container__form">

            <div class="inv-form-container__group">
              <label for="classification_id">Classification</label>
              <%- classificationList %>
            </div>

            <div class="inv-form-container__group">
              <label for="inv_make">Make</label>
              <input type="text" name="inv_make" id="inv_make" class="inv-form-container__input" pattern="^[A-Za-z]+$"
                title="Only letters allowed" value="<%= typeof inv_make !== 'undefined' ? inv_make : '' %>" required>
            </div>

            <div class="inv-form-container__group">
              <label for="inv_model">Model</label>
              <input type="text" name="inv_model" id="inv_model" class="inv-form-container__input"
                pattern="^[A-Za-z0-9]+$" title="Letters and numbers only"
                value="<%= typeof inv_model !== 'undefined' ? inv_model : '' %>" required>
            </div>

            <div class="inv-form-container__group">
              <label for="inv_description">Description</label>
              <textarea name="inv_description" id="inv_description" class="inv-form-container__input"
                style="resize: vertical;"
                required><%= typeof inv_description !== 'undefined' ? inv_description : '' %></textarea>
            </div>

            <div class="inv-form-container__group">
              <label for="inv_image">Image Path</label>
              <input type="text" name="inv_image" id="inv_image" class="inv-form-container__input"
                value="<%- typeof inv_image !== 'undefined' ? inv_image : '/images/vehicles/no-image.png' %>" required>
            </div>

            <div class="inv-form-container__group">
              <label for="inv_thumbnail">Thumbnail Path</label>
              <input type="text" name="inv_thumbnail" id="inv_thumbnail" class="inv-form-container__input"
                value="<%- typeof inv_thumbnail !== 'undefined' ? inv_thumbnail : '/images/vehicles/no-image.png' %>"
                required>
            </div>

            <div class="inv-form-container__group">
              <label for="inv_price">Price</label>
              <input type="number" name="inv_price" id="inv_price" class="inv-form-container__input" step="0.01" min="0"
                value="<%= typeof inv_price !== 'undefined' ? inv_price : '' %>" required>
            </div>

            <div class="inv-form-container__group">
              <label for="inv_year">Year</label>
              <input type="number" name="inv_year" id="inv_year" class="inv-form-container__input" min="1886" max="2099"
                value="<%= typeof inv_year !== 'undefined' ? inv_year : '' %>" required>
            </div>

            <div class="inv-form-container__group">
              <label for="inv_miles">Miles</label>
              <input type="number" name="inv_miles" id="inv_miles" class="inv-form-container__input" min="0"
                value="<%= typeof inv_miles !== 'undefined' ? inv_miles : '' %>" required>
            </div>

            <div class="inv-form-container__group">
              <label for="inv_color">Color</label>
              <input type="text" name="inv_color" id="inv_color" class="inv-form-container__input" pattern="^[A-Za-z]+$"
                title="Only letters allowed" value="<%= typeof inv_color !== 'undefined' ? inv_color : '' %>" required>
            </div>

            <button type="submit" class="inv-form-container__submit">Add Vehicle</button>

          </form>
        </div>